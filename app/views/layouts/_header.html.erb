<div class="container-fluid" style="background-color: powderblue;"> 
  <div class="navbar-header">
      <%= link_to 'Trust Management', root_path, class: 'navbar-brand' %>
    </div>
  <div class="collapse navbar-collapse navbar-right" id="navbar-collapsible-content">
    <ul class="nav navbar-nav ">
      <% if user_signed_in? %>
        <li class="dropdown pc-menu">
          <a id="user-settings" class="dropdown-toggle" data-toggle="dropdown" href="#">
            <span id="user-email"><%= current_user.username %></span>
            <span class="caret"></span>
          </a>

          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            <li style="padding-left: 18px;"><%= current_user.role %></li>
          </ul>
        </li>
        <li class="mobile-menu">
          <%= link_to 'Edit Profile', edit_user_registration_path %>
        </li>
        <li class="mobile-menu">
          <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
        </li>

      <% else # user not signed it %>
        <li ><%= link_to 'Login', user_session_path %></li>
        <li ><%= link_to 'Signup', new_user_registration_path %></li>
      <% end # if user is signed it %>
    </ul>
  </div><!-- navbar-collapse -->
</div>
